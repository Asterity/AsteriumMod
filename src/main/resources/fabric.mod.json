{
  "schemaVersion": 1,
  "id": "asterium",
  "version": "${version}",
  "name": "Asterium",
  "description": "A Minecraft mod which provides a lot of useful functions for Fabric.",
  "authors": [
    "yuko1101"
  ],
  "contact": {
    "website": "https://github.com/Asterity/AsteriumMod#readme",
    "repo": "https://github.com/Asterity/AsteriumMod"
  },
  "license": "MIT",
  "icon": "assets/asterium/icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      {
        "adapter": "kotlin",
        "value": "io.github.asterity.asterium.Asterium"
      }
    ]
  },
  "mixins": [
    "asterium.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": ">=1.20",
    "fabric-language-kotlin": ">=1.10.15+kotlin.1.9.21"
  }
}
